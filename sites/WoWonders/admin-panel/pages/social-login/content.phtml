<script>
$(function() {
    var form_social_settings = $('form.social-settings');
    form_social_settings.ajaxForm({
        url: Wo_Ajax_Requests_File() + '?f=admin_setting&s=update_general_setting',
        beforeSend: function() {
            form_social_settings.find('button').text('Please wait..');
        },
        success: function(data) {
            if (data.status == 200) {
                form_social_settings.find('button').text('Save');
                $("html, body").animate({ scrollTop: 0 }, "slow");
                $('.social-settings-alert').html('<i class="fa fa-check"></i> Settings updated successfully');
