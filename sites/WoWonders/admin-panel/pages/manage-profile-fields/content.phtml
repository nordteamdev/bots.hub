    console.log("error");
  })
}
function Wo_DeleteField(id) {
  if (id == '') {
    return false;
  }
  if (!confirm('Are you sure you want to delete this field?')) {
    return false;
  }
  $('#' + id).fadeOut(300, function () {
    $(this).remove();
  });
  $.get(Wo_Ajax_Requests_File(), {f: 'admin_setting', s:'delete_field', id:id});
}
</script>