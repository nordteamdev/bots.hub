  });
});

function Wo_DeleteApp(id) {
  if (!id) {
   return false;
  }

  else{
       $('#AppID_' + id).fadeOut(300, function() {
           $(this).remove();
         });
       $("#delete-app").modal('hide');
      $.get(Wo_Ajax_Requests_File(),{f:'delete-app',id: id});
  }
  
}
</script>